package numericData;

public class RectangleComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double area;
		double perimeter;
		double length =7.0;
		double width =3.5;
		
		area = length*width; 
		perimeter = length + length + width + width;
		
		System.out.print("The area is ");
		System.out.print("");
		System.out.println(area);
		System.out.print("");
		System.out.print("The perimeter is ");
		System.out.print(perimeter);
		
	}

}


package numericData;

public class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double radius =3.4;
		double height =8.0;
		double surfaceArea;
		double baseArea;
		double volume;
		double PI =3.14159265;
		
		surfaceArea = (2*PI*radius*height)+(2*PI*(radius*radius));
		baseArea = (PI*(radius*radius));
		volume = (PI*(radius*radius)*height);
		
		System.out.print("The radius is " + 3.4 + " and the height is " + 8.0);
		System.out.println("");
		System.out.print("The surface area of cylinder is " + surfaceArea);
		System.out.println("");
		System.out.print("The basearea of cylinder is " + baseArea );
		System.out.println("");
		System.out.print("The volume of the cylinder is " + volume);
		
		
	}

}
