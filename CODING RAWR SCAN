package numericaldata;

import java.util.Scanner;

public class meow {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner rawr = new Scanner(System.in);
		
		System.out.println("What's your first name?");
		String name = rawr.next();
		
		System.out.println("What's your age?");
		int age = rawr.nextInt();
		
		System.out.println("What's your senior quote?");
		String quote = rawr.next();
		quote = quote + rawr.nextLine();

		
		System.out.println("Any last word before you leave the school?");
		String school = rawr.next();
		school = school + rawr.nextLine();
		
		System.out.println("Thank you " + name + ", you are " + age + " years old ");
		System.out.println("and your senior quote is " + quote + " + your last word is " + school);
		
		
		
	}

}
